{
  "name": "flip7-webapp",
  "version": "1.0.0",
  "description": "Flip 7 card game - full stack web application",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24.x"
  },
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "install:all": "cd client && npm install && cd ../server && npm install"
  },
  "dependencies": {
    "@vercel/node": "^3.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.2.2"
  }
}

