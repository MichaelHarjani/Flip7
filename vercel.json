{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install && cd client && npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/api/game/start", "destination": "/api/game/start" },
    { "source": "/api/game/:gameId/:action", "destination": "/api/game/handler?gameId=:gameId&action=:action" },
    { "source": "/api/game/:gameId/:action/:subaction", "destination": "/api/game/handler?gameId=:gameId&action=:action&subaction=:subaction" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
