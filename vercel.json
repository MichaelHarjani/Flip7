{
  "buildCommand": "cd client && npm ci && npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "cd client && npm ci",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/game/start", "destination": "/api/game/start" },
    { "source": "/api/game/:gameId/:path*", "destination": "/api/game/[gameId]/[...action]" },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}
